#!/usr/bin/make -f

export DH_VERBOSE=1
export PYBUILD_NAME=codeprintio

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	dh_auto_install
	# Ensure scripts are executable
	chmod +x debian/codeprintio/usr/bin/codeprint || true
	chmod +x debian/codeprintio/usr/bin/codep || true
	chmod +x debian/codeprintio/usr/bin/codeprintio || true